<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customview.SimpleNestedScrollingActivity">

    <com.cwl.customviewbox.UseBehavior.NestedScrolling.ParentView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/design_default_color_secondary_variant">

        <com.cwl.customviewbox.UseBehavior.NestedScrolling.MiddleView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/colorAccent">
            <com.cwl.customviewbox.UseBehavior.NestedScrolling.ChildView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/design_default_color_secondary" />
        </com.cwl.customviewbox.UseBehavior.NestedScrolling.MiddleView>

    </com.cwl.customviewbox.UseBehavior.NestedScrolling.ParentView>
</RelativeLayout>