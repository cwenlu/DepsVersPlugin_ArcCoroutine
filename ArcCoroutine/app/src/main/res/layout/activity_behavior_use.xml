                    android:background="@android:color/holo_blue_bright"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:background="@android:color/holo_orange_dark"/>



            <LinearLayout
                    android:layout_width="match_parent"
